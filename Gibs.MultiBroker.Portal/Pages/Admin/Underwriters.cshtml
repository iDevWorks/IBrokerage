@page
@model Gibs.Portal.Pages.Admin.UnderWritersModel
@{
    ViewData["Title"] = "UnderWriters";
}

<main class="bg-white p-4 border">
    <top-bar>
        <left>
            <div class="input-group ">
                <input type="text" class="form-control" placeholder="Search...." />
                <button class="btn btn-secondary" type="button"><i class="bi bi-search"></i></button>
            </div>
        </left>
        <right>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal"><i class="bi bi-plus-circle-fill me-2"></i> Add Customer</button>
            <button class="btn btn-outline-secondary">Export</button>
        </right>
    </top-bar>
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th><input type="checkbox" class="form-check-input" /></th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UnderWriters.Any())
            {
                foreach (var underWriter in Model.UnderWriters)
                {
                    @* <tr>
                        <th><input type="checkbox" class="form-check-input" /></th>
                        <td>@underWriter.Insurer.InsurerName</td>
                        <td>@underWriter.Insurer.ph</td>
                        <td>@underWriter.Insurer.E</td>
                        <td>@underWriter.Address</td>
                        <td class="d-flex gap-1">
                            <i class="bi bi-trash" data-bs-toggle="modal"
                               data-bs-target="#deletePolicy" data-id="@underWriter.Id"
                               data-policy-name="@underWriter.Name">
                            </i>
                            <i class="bi bi-pencil-square"></i>
                        </td>
                    </tr> *@
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No items to show</td>
                </tr>
            }
        </tbody>
    </table>
</main>



<!-- Delete UnderWriter -->
<div class="modal fade" id="deleteUnderWriter" data-bs-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="deleteUnderWriterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUnderWriterModalLabel">Delete Underwriter -<span id="underWriterName"></span></h5>
            </div>
            <div class="modal-body">
                <form method="post" class="d-flex flex-column gap-3" asp-page-handler="DeleteUnderWriter">
                    <input type="hidden" name="underWriterId" id="deleteUnderWriterId" />
                    <div class="mt-1 d-flex align-items-center gap-1">
                        <button type="submit" class="btn btn-danger">delete</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>