@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex h-100 align-items-center justify-content-center">
    <main class="bg-white shadow p-3" style="width: 600px">
        <aside>
            <nav class="p-3">
                <h4>@ViewData["Title"]</h4>
            </nav>

            <div class="p-4 pt-0">
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <div class="d-flex flex-column gap-3">
                        <div>
                            <label class="form-label" asp-for="Email">Email</label>
                            <input class="form-control" asp-for="Email" type="email" required />
                        </div>
                        <div>
                            <label class="form-label" asp-for="Password">Pasword</label>
                            <input class="form-control" asp-for="Password" type="password" required />
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="form-check">
                                <input asp-for="Role" class="form-check-input" type="radio"                 value="broker">
                                <label asp-for="Role" class="form-check-label">
                                    login as broker
                                </label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Role" class="form-check-input" type="radio"                 value="insured">
                                <label asp-for="Role" class="form-check-label">
                                    login as insured
                                </label>
                            </div>
                        </div>
                        <a asp-page="#">forgot password?</a>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    <div class="mt-3 text-center">
                        <a asp-page="Register">Create New Account</a>
                    </div>
                </form>
            </div>
        </aside>
    </main>
</div>

