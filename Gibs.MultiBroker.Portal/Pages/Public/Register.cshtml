@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex h-100 align-items-center justify-content-center">
    <main class="bg-white rounded-3 shadow p-5">
        <header class="mb-4">
            <h4>iBrokerage</h4>
            <p>Create your account</p>
        </header>
        <form method="post" class="d-flex flex-column">
            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <div class="d-flex flex-column gap-3">
                <div class="d-flex gap-3">
                    <div>
                        <label class="form-label" asp-for="FirstName">First Name</label>
                        <input type="text" class="form-control" asp-for="FirstName" required />
                    </div>
                    <div>
                        <label class="form-label" asp-for="LastName">Last Name</label>
                        <input type="text" class="form-control" asp-for="LastName" required />
                    </div>
                </div>
                <div class="d-flex gap-3">
                    <div>
                        <label class="form-label" asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email" required />
                    </div>
                    <div>
                        <label class="form-label" asp-for="PhoneNumber">Phone</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" required />
                    </div>
                </div>
                <div>
                    <label class="form-label" asp-for="RegistrationNo">RegistrationNo</label>
                    <input type="text" class="form-control" asp-for="RegistrationNo" required />
                </div>
                <div>
                    <label class="form-label" asp-for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" required />
                </div>
                <div>
                    <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" required />
                </div>

                <div class="d-flex justify-content-between">
                    <div class="d-flex align-items-center gap-1">
                        <p class="mb-0">already have an account <span><a class="text-decoration-none" asp-page="Login">Login</a></span></p>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark">Create Account</button>
            </div>
        </form>
    </main>
</div>
