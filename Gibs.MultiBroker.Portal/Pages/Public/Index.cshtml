    ViewData["Title"] = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_StaticFiles" model='"styles"' />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary-subtle shadow">
        <div class="container">
            <a class="navbar-brand" href="Index">TITPAK</a>
            <button class="btn btn-toolbar py-2" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item px-3">
                        <a class="nav-link" href="/Public/Products"><i class="bi bi-house-check me-2"></i>Products</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="#/Public/Renewals"><i class="bi bi-house me-2"></i>Renewals</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="#/Public/Claims"><i class="bi bi-cash-coin me-2"></i>Claims</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="/Public/Contact"><i class="bi bi-telephone me-2"></i>Contact</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex gap-3">
                <a class="btn btn-secondary" href="/Public/Login">Login</a>
                <a class="btn btn-primary" href="/Public/Register">Sign Up</a>
            </div>
        </div>
    </nav>

    <main>
        <section class="py-5 bg-primary-subtle">
            <div class="container">
                <div class="d-flex justify-content-center align-items-center pt-3 gap-5">
                    <div>
                        <h3 class="fw-bold">Enter Your Car Registration No</h3>
                        <p>Premium as low as ₦15,000 per annum</p>
                        <div class="d-flex flex-column gap-3">
                            <input class="form-control py-3" type="text" placeholder="e.g AA-345-LND" />
                            <button class="btn btn-primary btn-lg py-3">Get Quote</button>
                        </div>
                    </div>
                     <img class="img-fliud" src="~/images/insurance-illustration.svg" />
                </div>
            </div>
        </section>

        <section class="py-5 container">
            <h1 class="fw-bold">What is Car Insurance? A must-have for everyone who drives</h1>
            <p class="pt-1">Introducing our comprehensive and affordable car insurance plans tailored to meet the diverse needs of Nigerian drivers! At Titpak, we understand the importance of safeguarding your vehicle on the bustling roads of Nigeria. Our insurance policies offer extensive coverage, including protection against accidents, theft, and third-party liabilities. We prioritize your peace of mind by providing quick and hassle-free claims processing. With our competitive rates and flexible payment options, we make it easy for you to secure the protection your car deserves. Trust us to be your reliable partner on the road, ensuring that you drive with confidence. Don't leave your car unprotected – choose Titpak for reliable and affordable car insurance in Nigeria!</p>
            <p>In addition to our robust coverage options, we pride ourselves on exceptional customer service that goes above and beyond. Our team of experienced professionals is dedicated to assisting you at every step of the way, from selecting the right policy to handling claims efficiently. We understand the unique challenges of driving in Nigeria, and our insurance plans are designed to provide you with maximum flexibility and peace of mind. With a network of trusted partners and workshops, we ensure prompt and quality repairs, minimizing the inconvenience to you. Moreover, our loyalty programs and discounts reward safe driving habits, making it even more cost-effective to choose us. Join the countless satisfied customers who have made us their preferred choice for car insurance. Drive confidently with Titpak, where your protection is our priority.</p>
        </section>
    </main>
</body>

</html>
