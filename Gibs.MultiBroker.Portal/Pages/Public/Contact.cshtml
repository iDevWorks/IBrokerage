@page
@model Gibs.MultiBroker.Portal.Pages.Public.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<section class="container">
    <h3 class="fw-bold mb-4 text-center">Contact Us</h3>
    <div class="row justify-content-center gap-4">
        <div class="col-11 col-sm-10 col-lg-5">
            <div class="mb-3">
                <i class="bi bi-house fs-4 mb-3"></i>
                <div>
                    <h5 class="mb-1 fw-bold">Address</h5>
                    <a href="#" class="text-decoration-none text-dark">
                        Nigerian Railway Compound,
                        off Moshood Abiola Rd,
                        P.M.B.1037, Ebute Metta, Lagos.
                    </a>
                </div>
            </div>
            <div class="mb-3">
                <i class="bi bi-telephone fs-4 mb-3"></i>
                <div>
                    <h5 class="mb-1 fw-bold">Phone</h5>
                    <a href="tel:+2348033070308" class="text-decoration-none text-dark">+2348033070308</a>
                </div>
            </div>
            <div class="mb-3">
                <i class="bi bi-envelope fs-4 mb-3"></i>
                <div>
                    <h5 class="mb-1 fw-bold">Email</h5>
                    <a href="mailto:Info@titpakinsurancebrokers.com" class="text-decoration-none text-dark">Info@titpakinsurancebrokers.com</a>
                </div>
            </div>
            <div class="mb-3">
                <i class="bi bi-whatsapp fs-4 mb-3"></i>
                <div>
                    <h5 class="mb-1 fw-bold">Whatsapp</h5>
                    <a href="#" class="text-decoration-none text-dark">+2348033070308</a>
                </div>
            </div>
        </div>

        <div class="p-5 rounded-3 col-11 col-sm-10 col-lg-5 col-xl-4" style="background-color: #f8f8fa;">
            <h4 class="mb-0 fw-bold mb-3">Send us a message</h4>
            <form method="post" class="d-flex flex-column gap-3">
                <div>
                    <label asp-for="Sender" class="form-label">From</label>
                    <input type="email" class="form-control" asp-for="Sender" placeholder="your@email.com" required>
                </div>
                <div>
                    <label asp-for="Subject" class="form-label">Subject</label>
                    <input type="text" class="form-control" asp-for="Subject" required>
                </div>
                <div>
                    <label asp-for="Message" class="form-label">Message</label>
                    <textarea class="form-control" asp-for="Message" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-dark mt-2">Submit</button>
            </form>
        </div>
    </div>
</section>