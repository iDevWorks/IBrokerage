@page
@model OrdersModel
@{
    ViewData["Title"] = "Orders";
}

<main class="bg-white p-4 border">
    <top-bar>
        <left>
            <div class="input-group ">
                <input type="text" class="form-control" placeholder="Search...." />
                <button class="btn btn-secondary" type="button"><i class="bi bi-search"></i></button>
            </div>
        </left>
        <right>
            <button class="btn btn-outline-secondary">Export</button>
        </right>
    </top-bar>
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th><input type="checkbox" class="form-check-input" /></th>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th>Reference No</th>
                <th>Payment Status</th>
                <th>Payment Method</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OrdersGrid.Any())
            {
                foreach (var order in Model.OrdersGrid)
                {
                    <tr>
                        <th><input type="checkbox" class="form-check-input" /></th>
                        <td>@order.Id</td>
                        <td>@order.CreatedUtc.ToLocalTime().ToString("dd/MM/yyy hh:mm")</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.Reference</td>
                        <td>@order.PaymentStatus</td>
                        <td>@order.PaymentMethod</td>
                        <td class="d-flex gap-1">
                            <i class="bi bi-trash" data-bs-toggle="modal"
                               data-bs-target="#deletePolicy" data-id="@order.Id">
                            </i>
                            <i class="bi bi-pencil-square"></i>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">No items to show</td>
                </tr>
            }
        </tbody>
    </table>
</main>