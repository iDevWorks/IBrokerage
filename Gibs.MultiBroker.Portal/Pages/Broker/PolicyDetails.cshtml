@page "{policyNo}"
@model Gibs.Portal.Pages.PolicyDetailModel
@{
    ViewData["Title"] = "Policy Details";
}

<div class="mt-3">
    <div class="card rounded-3" style="width:70%;">
        <div class="card-header">
            <h5 class="d-flex justify-content-between align-items-center">
                <span class="fw-bold">Policy(@Model.PolicyNo)</span>
                <a asp-page="PolicyEdit" asp-route-id="@Model.Policy.PolicyNo" class="text-decoration-none">Edit</a>
            </h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Policy Number:</dt>
                <dd class="col-sm-8">@Model.Policy.PolicyNo</dd>

                <dt class="col-sm-4">Insured Name:</dt>
                <dd class="col-sm-8">@Model.Policy.InsuredName</dd>

                <dt class="col-sm-4">Start Date:</dt>
                <dd class="col-sm-8">@Model.Policy.StartDate.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-4">End Date:</dt>
                <dd class="col-sm-8">@Model.Policy.EndDate.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-4">Sum Insured:</dt>
                <dd class="col-sm-8">@Model.Policy.SumInsured.ToString("C")</dd>

                <dt class="col-sm-4">Gross Premium:</dt>
                <dd class="col-sm-8">@Model.Policy.GrossPremium.ToString("C")</dd>

                <dt class="col-sm-4">Commission:</dt>
                <dd class="col-sm-8">@Model.Policy.Commission.ToString("C")</dd>
            </dl>
        </div>
    </div>
</div>
