@page "{policyNo}"
@model PolicyDetailModel
@{
    ViewData["Title"] = $"Policy #{Model.PolicyNo}";
}

<div class="col-12">
    <card class="bg-primary">
        <body>
            <card class="bg-primary">
                <body>
                    <div class="d-flex">
                        <div class=" flex-grow-1">
                            <h4 class="mt-1 mb-1 text-white">@Model.Policy.InsuredName</h4>
                            <p class="text-white-50">SubText</p>

                            <ul class="mb-0 list-inline text-light">
                                <li class="list-inline-item me-3">
                                    <h5 class="mb-1 text-white">@Model.Policy.SumInsured.ToString("C")</h5>
                                    <p class="mb-0 text-white-50">Sum Insured</p>
                                </li>
                                <li class="list-inline-item me-3">
                                    <h5 class="mb-1 text-white">@Model.Policy.GrossPremium.ToString("C")</h5>
                                    <p class="mb-0 text-white-50">Gross Premium</p>
                                </li>
                                <li class="list-inline-item me-3">
                                    <h5 class="mb-1 text-white">@Model.Policy.Commission.ToString("C")</h5>
                                    <p class="mb-0 text-white-50">Commission</p>
                                </li>
                            </ul>
                        </div>
                        <div class="d-flex flex-column gap-2">
                            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#addModal">
                                <i class="bi bi-pencil-square me-1"></i> Edit Policy
                            </button>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('sure?');">
                                <i class="bi bi-trash3 me-1"></i> Delete Policy
                            </button>
                        </div>
                    </div>
                </body>
            </card>

        </body>
    </card>
</div>

