<form method="post">
    <modal id="addModal">
        <header title="Edit Policy - @Model.Policy.PolicyNo"></header>
        <body>
            <input asp-label="PolicyNo" asp-for="@Model.PolicyNo" type="text" readonly>
            <input asp-label="Insured Name" asp-for="@Model.Policy.InsuredName" type="text">
            <input asp-label="Sum Insured" asp-for="@Model.Policy.SumInsured" type="number">
            <input asp-label="End Date" asp-for="@Model.Policy.EndDate" type="date">
            <input asp-label="Gross Premium" asp-for="@Model.Policy.GrossPremium" type="number">
        </body>
        <footer>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" asp-page-handler="UpdatePolicy">Save</button>
        </footer>
    </modal>
</form>