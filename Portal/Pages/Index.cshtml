@page
@model iBrokerage.Pages.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iBrokerage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/iBrokerage.styles.css" asp-append-version="true" />
</head>

<body style="background-color: #f8f8fa;" class="d-flex justify-content-center vh-100 container">
    <main class="d-flex align-items-center h-100">
        <div class="d-flex login-form flex-column justify-content-center gap-4 bg-white py-5 px-4 rounded-3 shadow">
            <header class="d-flex flex-column gap-2">
                <h3 class="text-center mb-0">iBrokerage</h3>
                <p class="text-center mb-0">Login to your account</p>
            </header>
            <form method="post" class="d-flex flex-column">
                <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
                <div class="d-flex flex-column gap-3 input-wrapper">
                    <div class="d-flex flex-column gap-2">
                        <input type="email" class="form-control" placeholder="email" asp-for="Email" required />
                        <input type="password" class="form-control" placeholder="password"
                               asp-for="Password" required />
                    </div>

                    <div class="d-flex align-items-center gap-1">
                        <img src="~/images/mdi_lock-outline.svg" alt="">
                        <a class="text-decoration-none" asp-area="" asp-page="/ForgotPassword">forgot password?</a>
                    </div>
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>
                <div class="mt-3 text-center">
                    <a class="text-decoration-none" asp-area="" asp-page="SignUp">Create New Account</a>
                </div>
            </form>
        </div>

    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>